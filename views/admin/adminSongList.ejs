<!DOCTYPE html>
<html>
<head>
    <title>Playlist</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #FF0000;
            overflow: hidden;
            display: flex;
            justify-content: space-between;
            padding: 10px 20px;
            color: white;
        }

        .navbar .left {
            font-size: 18px;
        }

        .navbar .right a {
            color: white;
            text-decoration: none;
        }

        .container {
            margin: 20px;
        }

        h1 {
            text-align: center;
            background-color: #FF0000;
            color: white;
            padding: 20px;
            margin: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #E0E0E0;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #F8F8F8;
        }

        a {
            color: #FF0000;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <div class="left">
            <span><%= user.name %></span>
        </div>
        <div class="right">
            <a href="/logout"><u>Logout</u></a>
            <% if (user.role === "Admin") { %> 
                <a href="/admin"> <u>Admin</u></a>
                <% } %>
            <a href="/lists"><u>User Playlist</u></a>
            <a href="/lists/add"><u>Add Playlist</u></a>
        </div>
    </div>
    <div class="container">
        <h1>Song List</h1>
        <div style="justify-content: center;display: flex;">
            <div>
                <button style="color:white; background-color: #FF0000; width: 200px; height: 50px; border-color: #E0E0E0;" onclick="document.location.href='/admin/addsong'">Add Song</button>
                <form>
                    <input type="text" name="search" placeholder="Search By Title"> <input type="submit" value="Search">
                </form>
            </div>
        </div>
        <table>
            <tr>
                <th>No</th>
                <th>Gambar</th>
                <th>Judul Lagu</th>
                <th>Channel</th>
                <th>Action</th>
            </tr>
            <% Songs.forEach((el,index )=> { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><img src="<%= el.getImage() %>" alt="Thumbnail"></td>
                    <td><%= el.title %></td>
                    <td><%= el.channelName %></td>
                    <td>
                        <a style="color: orange;" href="/admin/edit/<%= el.id %>"> EDIT</a>
                        <a href="/admin/delete/<%= el.id %>"> DELETE</a>
                    </td>
                </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>
